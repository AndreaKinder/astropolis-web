---
import "../styles/global.css";
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import HeaderBanner from '../components/HeaderBanner.astro';
import MainOptions from '../components/MainOptions.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import TextAstrology from '../components/textAstrology.astro';
import ScriptBootstrap from "../components/scriptbootstrap.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <HeaderBanner />
        <MainOptions />
        <TextAstrology />
        <Footer />
        <ScriptBootstrap />
    </body>
</html>