---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import HeaderBanner from '../components/HeaderBanner.astro';
import MainOptions from '../components/MainOptions.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <Header />
        <HeaderBanner />
        <MainOptions />
        <a class="d-grid gap-4 m-2" href="https://calendly.com/astropolismariapolan/natal"><button type="button" class="btn btn-light btn-lg border-black">PEDIR CITA</button></a>
        <Footer />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>

<style>
    a{
        text-decoration: none;
    }
</style>