---
interface Props {
    title: string;
    description: string;
    imageUrl: string;
}

const { title, description, imageUrl }= Astro.props;
---
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 fs-2 text-center">{ title }</h1>
            <p class="text-center fs-sm">{ description }</p>
        </div>
    </div>
</div>
<style>
    .container {
        padding: 50px;
    }
</style>