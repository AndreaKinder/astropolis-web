<div class="banner-container">
    <div class="banner">
        <div class="slide" id="carta-astral"></div>
        <div class="slide" id="aprendizage-astro"></div>
        <div class="slide" id="ecuentros"></div>
    </div>
</div>
<style>
.banner-container {
    width: 100%;
    height: 20em;
    overflow: hidden;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    position: relative;
}
.banner {
    z-index: 2;
    display: flex;
    width: 300%;
    height: 100%;
    background-size: cover;
    background-position: center;
}
.slide {
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 1.5rem;
    animation: horizontal-scroll 8s ease-in-out infinite;
}

#carta-astral, #aprendizage-astro, #ecuentros {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

#carta-astral {
    background-image: url(/carta-astral.jpg);
}

#aprendizage-astro {
    background-image: url(/astro-dec.jpg);
}

#ecuentros {
    background-image: url(/encuentros-vivientes.jpg);
}
@keyframes horizontal-scroll {
    0%, 20% {
        transform: translate3d(0, 0, 0);
    }
    25%, 45% {
        transform: translate3d(-100%, 0, 0);
    }
    50%, 70% {
        transform: translate3d(-200%, 0, 0);
    }
    75%, 100% {
        transform: translate3d(0, 0, 0);
    }
}

@media (max-width: 900px) {
    .banner-container {
        height: 17em;
    }

    #carta-astral, #aprendizage-astro, #ecuentros {
        background-position: top;
    }
}

@media (max-width: 700px) {
    .banner-container {
        height: 12em;
    }

    #carta-astral, #aprendizage-astro, #ecuentros {
        background-position: top;
    }
}

