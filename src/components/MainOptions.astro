    font-family: 'Times New Roman', Times, serif;
}

@keyframes horizontal-scroll {
    0%, 20% {
        transform: translate3d(0, 0, 0);
    }
    25%, 45% {
        transform: translate3d(-100%, 0, 0);
    }
    50%, 70% {
        transform: translate3d(-200%, 0, 0);
    }
    75%, 100% {
        transform: translate3d(0, 0, 0);
    }
}

